{
  "name": "benar.id",
  "version": "0.3.1",
  "description": "Crowdsourced, collaborative Indonesian news rating app",
  "main": "index.js",
  "repository": "https://github.com/bobbypriambodo/benar.id.git",
  "scripts": {
    "start": "node boot",
    "watch-client": "webpack --progress --colors --watch",
    "test": "npm run integration-test",
    "integration-test": "npm run create-test-db; npm run run-dao-test; npm run destroy-test-db",
    "create-db": "node source/server/data/scripts/createDb",
    "destroy-db": "node source/server/data/scripts/destroyDb",
    "create-test-db": "NODE_ENV=test node source/server/data/scripts/createDb",
    "run-dao-test": "NODE_ENV=test mocha 'source/server/data/dao/__tests__/run.js'",
    "destroy-test-db": "NODE_ENV=test node source/server/data/scripts/destroyDb"
  },
  "author": "Bobby Priambodo <bobby.priambodo@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "dotenv": "^2.0.0",
    "glue": "^3.3.0",
    "good": "^7.0.1",
    "good-console": "^6.1.2",
    "good-squeeze": "^4.0.0",
    "handlebars": "^4.0.5",
    "hapi": "^13.5.0",
    "hapi-auth-cookie": "^6.1.1",
    "inert": "^4.0.1",
    "joi": "^9.0.4",
    "knex": "^0.11.7",
    "mysql": "^2.11.1",
    "objection": "^0.5.5",
    "slugify": "^1.0.2",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.4.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "elm-webpack-loader": "^3.0.6",
    "eslint": "^3.1.1",
    "eslint-config-airbnb-base": "^4.0.2",
    "eslint-plugin-import": "^1.11.1",
    "glob": "^7.0.5",
    "mocha": "^3.0.1",
    "sinon": "^1.17.5",
    "webpack": "^1.13.1"
  }
}
